    </offsets>
  </model>

  <animation>
    <type>scale</type>
    <object-name>enav</object-name>
    <x-factor> 1.0 </x-factor>
    <x-offset> 1.0 </x-offset>
    <y-factor> 1.0 </y-factor>
    <y-offset> 1.4 </y-offset>
    <z-factor> 1.0 </z-factor>
    <z-offset> 1.4 </z-offset>
  </animation>

<!-- Buttons -->
<animation>
  <type>pick</type>
  <object-name>k1.020</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-cycle</command>
      <property>instrumentation/enav[0]/selected</property>
    <value>1</value>
    <value>2</value>
    <value>3</value>
    </binding>
  </action>
</animation>

<animation>
  <type>pick</type>
  <object-name>k1.010</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-cycle</command>
      <property>instrumentation/enav[1]/wind-display</property>
    <value>0</value>
    <value>1</value>
    </binding>
  </action>
</animation>

	<animation>
		<type>pick</type>
		<object-name>k1.009</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[1]/radials/selected-deg</property>
				<step>1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>
					gui.popupTip(sprintf("VOR2 Radial: %d", 1 * getprop("instrumentation/nav[1]/radials/selected-deg")),3);
				</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[1]/radials/selected-deg</property>
				<step>10</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>
					gui.popupTip(sprintf("VOR2 Radial: %d", 1 * getprop("instrumentation/nav[1]/radials/selected-deg")),3);
				</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>k1.011</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[1]/radials/selected-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>
					gui.popupTip(sprintf("VOR2 Radial: %d", 1 * getprop("instrumentation/nav[1]/radials/selected-deg")),3);
				</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[1]/radials/selected-deg</property>
				<step>-10</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
			<binding>
				<command>nasal</command>
				<script>
					gui.popupTip(sprintf("VOR2 Radial: %d", 1 * getprop("instrumentation/nav[1]/radials/selected-deg")),3);
				</script>
			</binding>
		</action>
	</animation>

</PropertyList>

