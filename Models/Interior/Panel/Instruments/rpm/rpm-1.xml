<?xml version="1.0"?>

<!-- engine rpm clock instrument -->

<PropertyList>

 <path>rpm.ac</path>

  <effect>
     <inherits-from>Effects/model-transparent</inherits-from>
      <object-name>Face</object-name>
	     
    </effect>
 
  <animation>
    <type>material</type>
    <object-name>rpm-Needle1</object-name>
    <object-name>rpm-Needle2</object-name>
    <object-name>face</object-name>
    <emission>
      <red>   0.9 </red>
      <green> 0.9 </green>
      <blue>  0.9 </blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>

 <animation>
  <type>rotate</type>
  <object-name>rpm-Needle1</object-name>
  <property>engines/engine[0]/n1</property>
  <interpolation>
   <entry><ind>0</ind><dep>0</dep></entry>
   <entry><ind>100</ind><dep>270</dep></entry>
  </interpolation>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>rpm-Needle2</object-name>
  <property>engines/engine[0]/n1</property>
  <factor>36</factor>
  <center>
   <x-m>0</x-m>
   <y-m>-0.0068</y-m>
   <z-m>0.0073</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>
 
</PropertyList>
