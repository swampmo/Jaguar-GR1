<?xml version="1.0"?>

	<PropertyList>

	<path>light-left-panel.ac</path>

	<!-- collision-switch-->
	<animation>
		<type>rotate</type>
		<object-name>collision-switch</object-name>
		<property>/controls/switches/anti-collision-lights</property>
		<interpolation>
			<entry><ind>0</ind><dep>-10</dep></entry>
			<entry><ind>1</ind><dep>25</dep></entry>
		</interpolation>
		<center>
			<x-m>-0.0539</x-m>
			<y-m>-0.0406</y-m>
			<z-m>-0.0020</z-m>
		</center>
		<axis>
			<x> 0</x>
			<y>-1</y>
			<z> 0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>collision-switch</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-toggle</command>
				<property>/controls/switches/anti-collision-lights</property>
			</binding>
		</action>
	</animation>
 
	<!-- nav switch -->
	<animation>
		<type>rotate</type>
		<object-name>nav-switch</object-name>
		<property>/controls/switches/nav-lights</property>
		<interpolation>
			<entry><ind>0</ind><dep>-10</dep></entry>
			<entry><ind>1</ind><dep>25</dep></entry>
		</interpolation>
		<center>
			<x-m> 0.0560</x-m>
			<y-m>-0.0406</y-m>
			<z-m>-0.0020</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>nav-switch</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-toggle</command>
				<property>/controls/switches/nav-lights</property>
			</binding>
		</action>
	</animation>

