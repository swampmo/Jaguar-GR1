<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>ai.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>AttitudeBall</object-name>
    <object-name>barre</object-name>
    <object-name>barre1</object-name>
    <object-name>barre2</object-name>
    <object-name>SkyPointer</object-name>
    <object-name>bouton</object-name>
    <object-name>ai-ring</object-name>
    <object-name>nav-pitch-steering-bar</object-name>
    <object-name>nav-yaw-steering-bar</object-name>
    <object-name>gs-scale</object-name>
    <object-name>ils-flags</object-name>
    <object-name>bank-index</object-name>
    <object-name>course-flag</object-name>
    <object-name>ring-slip</object-name>
    <object-name>slip-ball</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>AttitudeBall</object-name>
    <object-name>SkyPointer</object-name>
    <object-name>slip-ball</object-name>
    <object-name>ils-flag</object-name>
    <object-name>course-flag</object-name>
    <object-name>barre</object-name>
    <object-name>barre1</object-name>
    <object-name>barre2</object-name>
    <object-name>nav-pitch-steering-bar</object-name>
    <object-name>nav-yaw-steering-bar</object-name>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>    

  <animation>
    <type>select</type>
    <object-name>course-flag</object-name>
	<condition>
		<not>
		<property>instrumentation/nav/in-range</property>
		</not>
	</condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>course-flag</object-name>
    <factor>18</factor>
    <center>
      <x-m> -0.0066 </x-m>
      <y-m> -0.0033 </y-m>
      <z-m>  0.0264 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ils-flag</object-name>
	<condition>
		<not>
		<property>instrumentation/nav/gs-in-range</property>
		</not>
	</condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ils-flag</object-name>
    <factor>18</factor>
    <center>
      <x-m> -0.0066 </x-m>
      <y-m> -0.0216 </y-m>
      <z-m>  0.0002 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

   <animation>
        <type>translate</type>
        <object-name>nav-yaw-steering-bar</object-name>
        <property>instrumentation/nav/heading-needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10.0</ind><dep>-0.013</dep>
            </entry>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>10.0</ind><dep>0.013</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>nav-pitch-steering-bar</object-name>
        <property>instrumentation/nav/gs-needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10.0</ind><dep>-0.01</dep>
            </entry>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>10.0</ind><dep>0.01</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

  <animation>
    <type>rotate</type>
    <object-name>AttitudeBall</object-name>
    <property>orientation/roll-deg</property>
    <factor>1</factor>
    <center>
      <x-m> -0.036 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.001 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <animation>
    <type>rotate</type>
    <object-name>AttitudeBall</object-name>
    <property>orientation/pitch-deg</property>
    <factor>1</factor>
    <center>
      <x-m> -0.036 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.001 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <animation>
    <type>rotate</type>
    <object-name>SkyPointer</object-name>
    <property>orientation/roll-deg</property>
    <factor>1</factor>
    <center>
      <x-m> -0.0361 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.001 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>slip-ball</object-name>
    <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <factor>8</factor>
    <min-deg> -13 </min-deg>
    <max-deg>  13 </max-deg>
    <center>
      <x-m> -0.036 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.001 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>bank-index</object-name>
    <property>orientation/roll-deg</property>
    <min-deg>-120</min-deg>
    <max-deg>120</max-deg>
    <center>
      <x-m> -0.036  </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.001 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
